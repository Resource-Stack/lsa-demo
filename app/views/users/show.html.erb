<div class="content-spacer">
<h1>User</h1>

<p>Role_ID</p>
<p><%= @selected_user.role_id %></p>
<hr>
<p>Overlooking User</p>
<p><%= User.find_by_id(@selected_user.overlooking_user).email %></p>

<hr>
<p>First Name</p>
<p><%= @selected_user.user_first_name %></p>
<hr>
<p>Last Name</p>
<p><%= @selected_user.user_last_name %></p>
<hr>
<p>Email</p>
<p><%= @selected_user.email %></p>
<hr>
<p>Created At</p>
<p><%= @selected_user.created_at %></p>
<hr>

<h1>Csv's</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>User</th>
      <th>Flagged</th>
      <th>Uploaded</th>
      <th>source</th>
      <th>policy</th>
      <th>forescout</th>
      <th>Import User CSV</th>
    </tr>
  </thead>

  <tbody>
    <% @selected_user.csv_uploads.each do |csv_upload| %>
      <tr>
        <td><%= csv_upload.user_id %></td>

        <% if csv_upload.flagged == true %>
          <td style="background-color: red"><%= csv_upload.flagged %></td>
        <% else %>
          <td style="background-color: green"><%= csv_upload.flagged %></td>
        <% end %>

        <td><%= csv_upload.uploaded %></td>
        <td><%= csv_upload.source_id %></td>
        <td><%= csv_upload.policy_id %></td>
        <td><%= csv_upload.forescout_id %></td>
        <td><%= link_to 'Upload', upload_user_data_path(user: @selected_user.id, id: csv_upload.id), method: :post,  class: 'btn btn-primary' %></td>


      </tr>
    <% end %>
  </tbody>
</table>



<h1>User Data</h1>
<table class="table table-stripped">
  <thead>
    <tr>
      <% @masterRow.each do |x| %>
        <th> <%= x %></th>
      <% end %>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selected_user.table_entries.each do |table_entry| %>
      <tr>
        <td><%= table_entry.field_one %></td>
        <td><%= table_entry.field_two %></td>
        <td><%= table_entry.field_three %></td>
        <td><%= table_entry.field_four %></td>
        <td><%= table_entry.field_five %></td>
        <td><%= table_entry.field_six %></td>
        <td><%= table_entry.field_seven %></td>
        <td><%= table_entry.field_eight %></td>
        <td><%= table_entry.field_nine %></td>
        <td><%= table_entry.field_ten %></td>
        <td><%= link_to 'Show', table_entry %></td>
        <td><%= link_to 'Edit', edit_table_entry_path(table_entry) %></td>
        <td><%= link_to 'Destroy', table_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>