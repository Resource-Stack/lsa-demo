<h1>Data Dump Tables</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Source</th>
      <th>Csv header name</th>
      <th>Csv row value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_dump_tables.each do |data_dump_table| %>
      <tr>
        <td><%= data_dump_table.user_id %></td>
        <td><%= data_dump_table.source_id %></td>
        <td><%= data_dump_table.csv_header_name %></td>
        <td><%= data_dump_table.csv_row_value %></td>
        <td><%= link_to 'Show', data_dump_table %></td>
        <td><%= link_to 'Edit', edit_data_dump_table_path(data_dump_table) %></td>
        <td><%= link_to 'Destroy', data_dump_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

