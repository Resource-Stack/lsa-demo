
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Report Types</h6> 
                <ul class="nav justify-content-end">
                  <li class="nav-item">
                    <%= link_to 'New Report Type', new_report_type_path %>
                  </li>
                </ul>
            </div>
            <!-- Card Body -->
            <div class="card-body">

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @report_types.each do |report_type| %>
                    <tr>
                      <td><%= report_type.title %></td>
                      <td><%= link_to 'Show', report_type %></td>
                      <td><%= link_to 'Edit', edit_report_type_path(report_type) %></td>
                      <td><%= link_to 'Destroy', report_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

              
            </div>
          </div>
        </div>
