    <!-- Modals -->
    <% if @fieldValues.present? %>
        <!-- Time Range  Modal-->
        <div class="modal fade" id="timeRangeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Filter By Date</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body row">
                        <div class="col">
                            <label for="startDate">Start Date:</label>
                            <input type="date" id="startDate" name="birthday">
                        </div>
                        <div class="col">
                            <label for="endDate">End Date:</label><br>
                            <input type="date" id="endDate" name="birthday">
                        </div>


                            <div class="col-12">
                                <label>Specify Field </label>
                                <select id="fieldSelection" ><br>
                                    <option></option>
                                    <% @fieldValues.each do |x| %>
                                        <option><%= x %></option>
                                    <% end %>
                                    
                                </select>                                                    
                            </div>


                        <div id="timeRangeSelection">
                            
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>

                        <button onclick="generateTimeReport()" class="btn btn-primary">Generate Report</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Restricted Parameters Modal-->
        <div class="modal fade" id="restrictedParameterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Filter By Fields</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body row">
                        <div class="col">
                            <label for="startDate">Specify First Field</label>
                            <select id ='filterFirstParamQuery'>
                                <option></option>
                                <% @fieldValues.each do |fe| %>

                                    <option> <%= fe %></option>
                                <% end %>
                            </select>
                            <br>
                            <div id="filteredFirstParam">
                                
                            </div>

                        </div>
                        <div class="col">
                            <label for="endDate">Specify Second Field</label>
                            <select id ='filterSecondParamQuery'>
                                <option></option>
                                <% @fieldValues.each do |fe| %>
                                    <option> <%= fe %></option>
                                <% end %>
                            </select>
                            <br>
                            <div id="filteredSecondParam">
                                
                            </div>

                        </div>

                    

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>

                        <button onclick="generateRestrictedReport()" class="btn btn-primary">Generate Report</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Find By Modal-->
        <div class="modal fade" id="findByModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Filter By Values</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body row">
                            <label for="startDate">Specify Field</label>
                            <select id="findBySelect">
                                <option></option>
                                <% @fieldValues.each do |fe| %>

                                    <option> <%= fe %></option>
                                <% end %>
                            </select>
                            <br>
                            <div id="findByFilter">
                                
                            </div>

                    

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>

                        <button onclick="generateFindByReport()" class="btn btn-primary">Generate Report</button>
                    </div>
                </div>
            </div>
        </div>
    <% end %>

<script type="text/javascript">

    //Select On Change Listeners
    //Time Range
    var timeRangeFieldSelection = document.getElementById('fieldSelection')
    timeRangeFieldSelection.addEventListener('change', function(){
        
        var field_selected = timeRangeFieldSelection.options[timeRangeFieldSelection.selectedIndex].text
        console.log("here",field_selected)
        var mydata = {
            field_selection: field_selected,
        }   

         Rails.ajax({
              type: "POST", 
              url: "/update_time_field_selection", 
              data: new URLSearchParams(mydata).toString(), 
          })
    })

    //Filtering
    var filterFirstParamQuery = document.getElementById('filterFirstParamQuery')
    filterFirstParamQuery.addEventListener('change', function(){
        
        var filter_one_selected = filterFirstParamQuery.options[filterFirstParamQuery.selectedIndex].text
        var mydata = {
            filter_one: filter_one_selected,
        }   

         Rails.ajax({
              type: "POST", 
              url: "/update_filter_one", 
              data: new URLSearchParams(mydata).toString(), 
          })
    })
    // filter two
    var filterSecondParamQuery = document.getElementById('filterSecondParamQuery')
    filterSecondParamQuery.addEventListener('change', function(){
        
        var filter_two_selected = filterSecondParamQuery.options[filterSecondParamQuery.selectedIndex].text
        var mydata = {
            filter_two: filter_two_selected,
        }   

         Rails.ajax({
              type: "POST", 
              url: "/update_filter_two", 
              data: new URLSearchParams(mydata).toString(), 
          })
    })
    // find by
    var findBySelect = document.getElementById('findBySelect')
    findBySelect.addEventListener('change', function(){
        
        var findBy_selected = findBySelect.options[findBySelect.selectedIndex].text
        var mydata = {
            findBy_filter: findBy_selected,
        }   

         Rails.ajax({
              type: "POST", 
              url: "/find_by_filter", 
              data: new URLSearchParams(mydata).toString(), 
          })
    })


    // Activate Bar Chart
    var barcharts = document.getElementsByClassName('BarChart')
    for (var i =0; i < barcharts.length; i++){
            barcharts[i].addEventListener('click', function(e){

              hidePie(e.srcElement.id)
              hideColumn(e.srcElement.id)
              //Display Bar Chart
              var barChart = 'field_bar_' + e.srcElement.id
              var activateBar = document.getElementById(barChart);
              activateBar.style.display = 'block';

          })
        }

    // Activate Bar Chart
    var piecharts = document.getElementsByClassName('PieChart')
    for (var i =0; i < piecharts.length; i++){
            piecharts[i].addEventListener('click', function(e){
              hideBar(e.srcElement.id)
              hideColumn(e.srcElement.id)
              //Display Pie Chart
              var currentID = 'field_pie_' + e.srcElement.id
              var currentCard = document.getElementById(currentID);
              currentCard.style.display = 'block';

          })
        }
    // Activate Column Chart
    var columncharts = document.getElementsByClassName('ColumnChart')
    for (var i =0; i < columncharts.length; i++){
            columncharts[i].addEventListener('click', function(e){

              hidePie(e.srcElement.id)
              hideBar(e.srcElement.id)
              //Show Column Chart
              var currentColumn = 'column_bar_' + e.srcElement.id
              var columnDiv = document.getElementById(currentColumn);
              columnDiv.style.display = 'block';


          })
        }

    function hidePie(e){
            //Hide Pie Chart
              var currentID = 'field_pie_' + e
              var currentCard = document.getElementById(currentID);
              currentCard.style.display = 'none';
    }

    function hideBar(e){

              //Hide Bar Chart
              var barChart = 'field_bar_' + e
              var activateBar = document.getElementById(barChart);
              activateBar.style.display = 'none';
    }

    function hideColumn(e){
              var currentColumn = 'column_bar_' + e
              var columnDiv = document.getElementById(currentColumn);
              columnDiv.style.display = 'none';
    }

    function generateTimeReport(){
        var endDate = document.getElementById('endDate').value
        var startDate = document.getElementById('startDate').value
        var fieldSelection = document.getElementById('fieldSelection')
        var field_selected = fieldSelection.options[fieldSelection.selectedIndex].text
        var uniqueSelection = document.getElementById('TimeRangeUniqueSelection')
        var uniqueValue = uniqueSelection.options[uniqueSelection.selectedIndex].text

        var mydata = {
            start_date: startDate,
            end_date: endDate,
            field_selection: field_selected,
            unique_selection: uniqueValue,
        }   

         Rails.ajax({
              type: "POST", 
              url: "/timeRangeReport", 
              data: new URLSearchParams(mydata).toString(), 
          })
    }

    function generateRestrictedReport(){
        var filterFirstParamQuery = document.getElementById('filterFirstParamQuery')
        var filter_one_selected = filterFirstParamQuery.options[filterFirstParamQuery.selectedIndex].text

        var filterOne = document.getElementById('filterOneSelection')
        var filterOneValue = filterOne.options[filterOne.selectedIndex].text

        var filterSecondParamQuery = document.getElementById('filterSecondParamQuery')
        var filter_two_selected = filterSecondParamQuery.options[filterSecondParamQuery.selectedIndex].text

        var filterTwo = document.getElementById('filterTwoSelection')
        var filterTwoValue = filterTwo.options[filterTwo.selectedIndex].text


        var mydata = {
            first_field: filter_one_selected,
            second_field: filter_two_selected,
            filter_one: filterOneValue,
            filter_two: filterTwoValue,
        }   


         Rails.ajax({
              type: "POST", 
              url: "/restrictParam", 
              data: new URLSearchParams(mydata).toString(), 
          })
    }

    function generateFindByReport(){
        let checkedValues = []
        var findByOptions = document.getElementsByClassName('findbyOption')
        for (var i =0; i < findByOptions.length; i++){
            iteratedOption = findByOptions[i]
            console.log("here", iteratedOption.id, "checked?", iteratedOption.checked)
            if (iteratedOption.checked == true){
                checkedValues.push(iteratedOption.id)
            }
        }

        var selectedField = document.getElementById('findBySelect')
        var filter_one_selected = selectedField.options[selectedField.selectedIndex].text




        var mydata = {
            findby_field: filter_one_selected,
            values: checkedValues,
        }   


         Rails.ajax({
              type: "POST", 
              url: "/findBy", 
              data: new URLSearchParams(mydata).toString(), 
          })
    }
</script>






