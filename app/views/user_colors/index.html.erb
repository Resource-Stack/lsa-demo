<p id="notice"><%= notice %></p>

<h1>User Colors</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_colors.each do |user_color| %>
      <tr>
        <td><%= user_color.color %></td>
        <td><%= user_color.user %></td>
        <td><%= link_to 'Show', user_color %></td>
        <td><%= link_to 'Edit', edit_user_color_path(user_color) %></td>
        <td><%= link_to 'Destroy', user_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Color', new_user_color_path %>
