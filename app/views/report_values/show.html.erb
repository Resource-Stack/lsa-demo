<div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Elastic Policy</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                    aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">Action:</div>
                            <!-- enter drop down-->

                            <%= link_to 'Refresh Data', false_create_path, method: :post, class: 'dropdown-item' %>
                            <%= link_to 'Elastic Policies', elastic_policies_path, class: 'dropdown-item' %>
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
			<p>
			  <strong>Title:</strong>
			  <%= @report_value.title %>
			</p>

			<p>
			  <strong>Report type:</strong>
			  <%= @report_value.report_type_id %>
			</p>

			<%= link_to 'Edit', edit_report_value_path(@report_value) %> |
		</div>
	</div>
</div>